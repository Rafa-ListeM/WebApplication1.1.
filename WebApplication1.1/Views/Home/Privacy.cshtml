<script>
    // Adicionando um ouvinte de eventos aos botões "Adicionar ao Carrinho"
    var botoesAdicionar = document.getElementsByClassName("adicionar");
    for (var i = 0; i < botoesAdicionar.length; i++) {
        var botao = botoesAdicionar[i];
        botao.addEventListener('click', adicionarItemAoCarrinho);
    }

    // Função para adicionar um item ao carrinho
    function adicionarItemAoCarrinho(event) {
        var botao = event.target;
        var produto = botao.parentElement;
        var nome = produto.querySelector('h2').innerText;
        var preco = produto.querySelector('p').innerText;
        criarItemNoCarrinho(nome, preco);
    }

    // Função para criar um item no carrinho
    function criarItemNoCarrinho(nome, preco) {
        var itemCarrinho = document.createElement('li');
        itemCarrinho.innerText = nome + ' - ' + preco;
        var carrinho = document.getElementById('carrinho');
        carrinho.appendChild(itemCarrinho);
    }
</script>